<div class="row">
    <div class="col-md-12">
        <title>Posts</title>
        <hr><br>
        <h2>Posts</h2>
        <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Post ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{formatDate postDate}}</td> <!-- Assuming you have a formatDate helper -->
                        <td><a href="/posts?category={{categoryId}}">{{categoryName}}</a></td> <!-- Assuming you pass categoryId and categoryName -->
                        <td>{{#if published}}Yes{{else}}No{{/if}}</td>
                        <td><a href="posts/delete/{{id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?');">Remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-12 text-center">
        {{#unless posts.length}}
        <strong>No posts available</strong>
        {{/unless}}
    </div>
</div>
